<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Common-->
    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MaterialComponents.Alert</item>
    </style>

    <style name="AlertDialog.RedButtons">
        <item name="buttonBarPositiveButtonStyle">@style/Button.OutlinedRed</item>
        <item name="buttonBarNegativeButtonStyle">@style/Button.OutlinedRed</item>
        <item name="buttonBarNeutralButtonStyle">@style/Button.OutlinedRed</item>
    </style>

    <style name="ShapeAppearance.MaterialComponents.Alert">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size_dialog</item>
    </style>

    <style name="Dialog.Animation" parent="">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="BottomSheetDialog.Rounded" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.RoundedShape</item>
    </style>

    <style name="BottomSheet.RoundedShape" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.BottomSheet.Rounded</item>
    </style>

    <style name="ShapeAppearance.BottomSheet.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.OutlinedRed" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="backgroundTint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="strokeColor">@android:color/holo_red_light</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>